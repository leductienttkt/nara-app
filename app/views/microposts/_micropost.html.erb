<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content" id="micropost_content-<%= micropost.id %>">
    <%= simple_format micropost.content %>
  </span>

  <span class="img">
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>

  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>

  <div class="option">
    <span id="comments_count-<%= micropost.id %>">
      <%= link_to "#{micropost.comments.count} comments ||", micropost, remote: true%>
    </span>
    <% if current_user?(micropost.user) %>
      <%= link_to "delete ||", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>

    <% if current_user?(micropost.user) %>
      <%= link_to "edit", edit_micropost_path(micropost), 
                          remote: true%>
    <% end %>
  </div>

  <span id="show_comment-<%= micropost.id %>">
    
  </span>
</li>
