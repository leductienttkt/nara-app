<% @user ||= current_user %>
<div class="stats">
  <%= link_to " #{@user.following.count} following", following_user_path(@user), :class => "btn", 
    remote: true, "data-toggle" => "modal", "data-target" => "#myModal" %>
  <%= link_to " #{@user.followers.count} followers", followers_user_path(@user), :class => "btn", 
    remote: true, "data-toggle" => "modal", "data-target" => "#myModal" %>
</div>  

<%=render 'users/show_follow'%>
